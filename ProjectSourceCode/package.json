{
	"name": "gello-app",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "bun --hot src/index.ts",
		"dev:env": "bash ../.devOps/scripts/sync.sh || echo 'Failed to sync'",
		"build": "bun build ./src/index.html --outdir=dist --sourcemap --target=browser --minify --define:process.env.NODE_ENV='\"production\"' --env='BUN_PUBLIC_*'",
		"start": "NODE_ENV=production bun src/index.ts",
		"commit": "commit",
		"lint": "biome lint --write",
		"lint:dry": "biome lint",
		"format": "biome format --write",
		"format:dry": "biome format",
		"check": "biome check --write",
		"check:dry": "biome check",
		"test": "vitest",
		"test:ci": "vitest --run",
		"e2e": "playwright test"
	},
	"dependencies": {
		"@hono/bun-transpiler": "^0.2.1",
		"@supabase/supabase-js": "^2.45.4",
		"bootstrap": "^5.3.8",
		"hono": "^4.10.3",
		"react": "^19",
		"react-bootstrap": "^2.10.10",
		"react-dom": "^19"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.0",
		"@playwright/test": "^1.56.1",
		"@types/bun": "latest",
		"@types/react": "^19",
		"@types/react-dom": "^19",
		"husky": "^9.1.7",
		"semantic-release": "^25.0.1",
		"supabase": "^2.53.6",
		"typescript": "^5.9.3",
		"vitest": "^4.0.3"
	}
}
