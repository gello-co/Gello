{
	"name": "gello-app",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "bun --hot src/index.ts",
		"dev:env": "bash ../.devOps/scripts/sync.sh || echo 'Failed to sync'",
		"build": "bun run build:css && bun run build:server",
		"build:css": "postcss src/public/css/input.css -o src/public/css/output.css",
		"build:server": "bun build src/index.ts --outdir=dist --target=node",
		"start": "NODE_ENV=production bun src/index.ts",
		"commit": "commit",
		"lint": "biome lint --write",
		"lint:dry": "biome lint",
		"format": "biome format --write",
		"format:dry": "biome format",
		"check": "biome check --write",
		"check:dry": "biome check",
		"test": "vitest",
		"test:ci": "vitest --run",
		"e2e": "playwright test"
	},
	"dependencies": {
		"@supabase/supabase-js": "^2.79.0",
		"alpinejs": "^3.15.1",
		"bootstrap": "^5.3.8",
		"express": "^5.1.0",
		"express-handlebars": "^8.0.3",
		"express-rate-limit": "^8.2.1",
		"helmet": "^8.1.0",
		"htmx.org": "^2.0.8",
		"tailwindcss": "^4.1.16",
		"zod": "^4.1.12"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.4",
		"@playwright/test": "^1.56.1",
		"@types/express": "^5.0.5",
		"@types/node": "^24.10.0",
		"@types/supertest": "^6.0.3",
		"@types/bun": "^1.3.1",
		"autoprefixer": "^10.4.21",
		"husky": "^9.1.7",
		"postcss": "^8.5.6",
		"semantic-release": "^25.0.1",
		"supabase": "^2.54.11",
		"supertest": "^7.1.4",
		"typescript": "^5.9.3",
		"vitest": "^4.0.7"
	}
}
