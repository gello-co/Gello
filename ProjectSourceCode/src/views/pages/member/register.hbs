<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-lg-6 col-md-8">
      <div class="login-form-card">
        <div class="text-center mb-4">
          <h2 class="login-form-title">Register as Team Member</h2>
          <p class="text-muted">Join your team and start completing tasks</p>
        </div>
        <form id="memberRegisterForm" action="/auth/member/register" method="POST">
          <div class="row">
            <div class="col-md-6 mb-3">
              <label class="form-label" for="firstName">First name<span class="required">*</span></label>
              <input type="text" class="form-control login-input" id="firstName" name="firstName" required>
            </div>
            <div class="col-md-6 mb-3">
              <label class="form-label" for="lastName">Last name<span class="required">*</span></label>
              <input type="text" class="form-control login-input" id="lastName" name="lastName" required>
            </div>
          </div>
          <div class="mb-3">
            <label class="form-label" for="username">Username<span class="required">*</span></label>
            <input type="text" class="form-control login-input" id="username" name="username" required>
          </div>
          <!-- the new addition here is that we just need the team id to sign up.  -->
          <div class="mb-3">
            <label class="form-label" for="teamId">Team ID<span class="required">*</span></label>
            <input type="text" class="form-control login-input" id="teamId" name="teamId" required>
            <small class="text-muted">Ask your admin/team lead for this code.</small>
          </div>
          <div class="mb-3">
            <label class="form-label" for="password">Password<span class="required">*</span></label>
            <input type="password" class="form-control login-input" id="password" name="password" required>
          </div>
          <div class="mb-4">
            <label class="form-label" for="confirmPassword">Confirm Password<span class="required">*</span></label>
            <input type="password" class="form-control login-input" id="confirmPassword" name="confirmPassword"
              required>
          </div>
          <button type="submit" class="btn btn-signin w-100">Join Team</button>
        </form>
        <div class="text-center mt-4">
          <p class="mb-0">Already a member? <a href="/pages/member/login" class="register-link">Login</a></p>
        </div>
      </div>
    </div>
  </div>
</div>