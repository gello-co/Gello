<div class="tasks-page">
    <div class="container-fluid px-4">
        <div class="row g-4">
            <div class="col-md-6">
                <div class="tasks-card">
                    <div class="login-card-body">
                        <h3>Tasks</h3>
                        {{#each tasks}}
                        {{/each}}
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <a href="./admin-tasks.hbs" style="text-decoration: none; color: inherit">
                    <div class="tasks-card">
                        <div class="login-card-body">
                            <h3>Points Overview</h3>
                            <p>Current Points: </p>
                            <p>Tasks to Points: </p>
                            <div class="priority-list">
                                <p style="color: rgb(206, 0, 0);">High Priority: </p>
                                <p style="color: rgb(233, 186, 0);">Medium Priority: </p>
                                <p style="color: rgb(0, 190, 9);">Low Priority: </p>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        </div>
    </div>
</div>


