
<div class="tasks-page">
    <div class="container-fluid px-4">
        <div class="row g-4">

            <div class="col-md-6">
                <div class="tasks-card">
                    <div class="login-card-body">
                        <h3>Tasks</h3>

                        <div class="tasks">
                            {{#each tasks}}
                                {{> task-card task=this user=../user}}
                            {{/each}}
                        </div>

                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <a href="./admin-tasks.hbs" style="text-decoration: none; color: inherit">
                    <div class="tasks-card">
                        <div class="login-card-body">
                            <h3>Points Overview</h3>
                            <p>Current Points: </p>
                        </div>
                    </div>
                </a>
            </div>

        </div>
    </div>
</div>