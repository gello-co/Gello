<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-lg-5 col-md-7">
      <div class="login-form-card">
        <div class="text-center mb-4">
          <h2 class="login-form-title">(TODO) Login as Team Member</h2>
          <p class="text-muted">Access your tasks and track your progress</p>
        </div>
        <form id="loginForm" action="/login/team" method="POST">
          <input type="hidden" name="_csrf" value="{{csrfToken}}" />
          <div class="mb-3">
            <label for="username" class="form-label">Username</label>
            <input
              type="text"
              class="form-control login-input"
              id="username"
              name="username"
              style="width: 100%;"
              required
            />
          </div>
          <div class="mb-3">
            <label for="teamID" class="form-label">Team ID</label>
            <input
              type="text"
              class="form-control login-input"
              id="teamID"
              name="teamID"
              style="width: 100%;"
              required
            />
          </div>
          <div class="mb-4">
            <label for="password" class="form-label">Password</label>
            <input
              type="password"
              class="form-control login-input"
              id="password"
              name="password"
              style="width: 100%;"
              required
            />
          </div>
          <button type="submit" class="btn btn-signin w-100">Login</button>
        </form>
        <div class="text-center mt-4">
          <p class="mb-0">
            Don't have an account?
            <a href="/register/team" class="register-link">Register</a>
          </p>
          <p class="mt-2">
            <a href="/login/admin">Login as Admin</a>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
