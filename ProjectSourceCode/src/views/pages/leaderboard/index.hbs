<div class="leaderboard-page">
    <div class="container-fluid px-4">
        <div class="row justify-content-center">
            <div class="col-lg-10">

                <div class="text-center mb-5">
                    <h1 class="page-title">Leaderboard</h1>
                    <p class="page-subtitle">Congrats to our weekly top 3!!</p>
                </div>

                {{
#if
 (length leaderboard)}}
                <div class="top-three-section">
                    <div class="row g-4">
                        {{
#each
 leaderboard}}
                        <div class="col-md-4">
                            <div class="winner-card">
                                <div class="winner-image">
                                    {{> user-avatar user=this}}
                                </div>
                                <div class="winner-name">{{display_name}}</div>
                                <div class="winner-note">
                                    {{> points-badge points=total_points}}
                                </div>
                            </div>
                        </div>
                        {{
/each
}}
                    </div>
                </div>
                {{
/if
}}

                <div class="leaderboard-card">
                    <div class="leaderboard-header">
                        <h3>Full Leaderboard</h3>
                    </div>
                    <div id="membersList">
                        {{
#if
 (length leaderboard)}}
                            {{
#each
 leaderboard}}
                            <div class="member-row">
                                <div class="member-avatar">
                                    {{> user-avatar user=this}}
                                </div>
                                <div class="member-info">
                                    <div class="member-name">{{display_name}}</div>
                                    <div class="member-description">
                                        {{> points-badge points=total_points}}
                                    </div>
                                </div>
                            </div>
                            {{
/each
}}
                        {{else}}
                            <div class="empty-state text-center py-5">
                                <p class="text-muted">No leaderboard data available yet</p>
                            </div>
                        {{
/if
}}
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>