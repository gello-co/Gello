<div class="leaderboard-page">
    <div class="container-fluid px-4">
        
        <div class="row justify-content-center">
            <div class="col-lg-10">

                <div class="text-center mb-5 fade-in">
                    <h1 class="page-title">Leaderboard</h1>
                    <p class="page-subtitle">Congrats to our weekly top 3!!</p>
                </div>

                <div class="top-three-section fade-in">
                    <div class="row g-4">
                    {{#each topThree}}
                        <div class="col-md-4">
                            <div class="winner-card">
                                <img src="#" alt="Winner 1" class="winner-image">
                                <div class="winner-name">Team Member 1</div>
                                <div class="winner-note" id="top-shoutout-1">team lead shoutout</div>
                            </div>
                        </div>
                    {{/each}}
                    </div>
                </div>

                <div class="leaderboard-card fade-in">
                    <div class="leaderboard-header">
                        <h3>Leaderboard</h3>
                        <div class="team-id">Team ID: #######</div>
                    </div>
                    <div id="membersList">
                        <div class="member-row" data-member-id="1">
                            <div class="member-avatar"></div>
                            <div class="member-info">
                                <div class="member-name">Team Member 1</div>
                                <div class="member-description" id="shoutout-1">short description</div>
                            </div>
                            <div class="member-actions admin-only">
                                <button class="btn-encourage" data-bs-toggle="modal" data-bs-target="#encouragementModal" onclick="setCurrentMember('Team Member 1', 1)">Send Encouragement</button>
                            </div>
                        </div>
                        
                        <div class="member-row" data-member-id="2">
                            <div class="member-avatar"></div>
                            <div class="member-info">
                                <div class="member-name">Team Member 2</div>
                                <div class="member-description" id="shoutout-2">short description.</div>
                            </div>
                            <div class="member-actions admin-only">
                                <button class="btn-encourage" data-bs-toggle="modal" data-bs-target="#encouragementModal" onclick="setCurrentMember('Team Member 2', 2)">Send Encouragement</button>
                            </div>
                        </div>
                        
                        <div class="member-row" data-member-id="3">
                            <div class="member-avatar"></div>
                            <div class="member-info">
                                <div class="member-name">Team Member 3</div>
                                <div class="member-description" id="shoutout-3">short description</div>
                            </div>
                            <div class="member-actions admin-only">
                                <button class="btn-encourage" data-bs-toggle="modal" data-bs-target="#encouragementModal" onclick="setCurrentMember('Team Member 3', 3)">Send Encouragement</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div> 
        </div> 
    </div>
    </div>

<div class="modal fade" id="encouragementModal" tabindex="-1" aria-labelledby="encouragementModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form id="encouragementForm">
                <div class="modal-header">
                    <h5 class="modal-title" id="encouragementModalLabel">Send Encouragement</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="memberName" class="form-label">Team Member</label>
                        <input type="text" class="form-control login-input" id="memberName" readonly>
                    </div>
                    <div class="mb-3">
                        <label for="encouragementMessage" class="form-label">Your Message</label>
                        <textarea class="form-control login-input" id="encouragementMessage" rows="4" placeholder="Write a note of encouragement..." required></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary btn-login">Send Message</button>
                </div>
            </form>
        </div>
    </div>
</div>