<div class="teams-page">
    <div class="container-fluid px-4">
        <div class="row">
            
            {{!-- Left Side: Join Team Form --}}
            <div class="col-lg-4 col-md-5">
                <div class="join-team-section">
                    <h2 class="section-title">Join a Team</h2>
                    <p class="section-subtitle">Enter your team code to get started</p>

                    <div class="join-team-card">
                        <form id="joinTeamForm">
                            
                            <!-- Team Code Input -->
                            <div class="mb-3">
                                <label for="teamCode" class="form-label">Team Code</label>
                                <input 
                                    type="text" 
                                    class="form-control login-input" 
                                    id="teamCode" 
                                    name="teamCode"
                                    placeholder="Enter 6-digit code"
                                    maxlength="6"
                                    required>
                                <small class="text-muted">Ask your team leader for the code</small>
                            </div>

                            <!-- Role Selection -->
                            <div class="mb-3">
                                <label class="form-label">Select Your Role</label>
                                <div class="role-options">
                                    <div class="role-card" onclick="selectRole('member')">
                                        <input 
                                            type="radio" 
                                            name="role" 
                                            id="roleMember" 
                                            value="member" 
                                            checked 
                                            hidden>
                                        <h6>Team Member</h6>
                                        <p class="small mb-0">Participate in activities</p>
                                    </div>
                                    
                                    <div class="role-card" onclick="selectRole('admin')">
                                        <input 
                                            type="radio" 
                                            name="role" 
                                            id="roleAdmin" 
                                            value="admin" 
                                            hidden>
                                        <h6>Team Admin</h6>
                                        <p class="small mb-0">Manage the team</p>
                                    </div>
                                </div>
                            </div>

                            <!-- Submit Button -->
                            <button type="submit" class="btn-signin w-100">
                                Join Team
                            </button>

                        </form>
                    </div>
                </div>
            </div>

            {{!-- Right Side: Your Teams --}}
            <div class="col-lg-8 col-md-7">
                <div class="your-teams-section">
                    <h2 class="section-title">Your Teams</h2>
                    
                    <div class="teams-grid">
                        {{!-- {{
#if
 (length teams)}}
                            {{
#each
 teams}} --}}
                            <div class="team-card">
                                <div class="team-card-header">
                                    <h4>{{name}}</h4>
                                    <span class="team-code">Code: {{team_code}}</span>
                                </div>
                                <div class="team-card-body">
                                    <p class="team-description">{{description}}</p>
                                    <div class="team-stats">
                                        <span><i class="fas fa-users"></i> {{member_count}} members</span>
                                        <span><i class="fas fa-trophy"></i> {{total_points}} points</span>
                                    </div>
                                </div>
                                <div class="team-card-footer">
                                    <a href="/teams/{{id}}" class="btn btn-sm btn-primary">View Team</a>
                                </div>
                            </div>
                            {{!-- {{
/each
}}
                        {{else}} --}}
                            <div class="empty-state">
                                <i class="fas fa-users fa-3x mb-3"></i>
                                <h5>No teams yet</h5>
                                <p class="text-muted">Join your first team using the form on the left!</p>
                            </div>
                        {{!-- {{
/if
}} --}}
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

<!-- Modal for Join Confirmation -->
<div class="modal fade" id="joinSuccessModal" tabindex="-1" aria-labelledby="joinSuccessLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="joinSuccessLabel">Welcome to the Team! ðŸŽ‰</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>You've successfully joined the team!</p>
                <p class="text-muted">Refreshing page...</p>
            </div>
        </div>
    </div>
</div>