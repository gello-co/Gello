<div class="container my-5">

  <div class="card text-bg-dark my-4">
    <img src="/images/stock.jpg" class="card-img" alt="Points Shop Banner" height="300px">
    <div class="card-img-overlay">
      <h1 class="card-title"><strong>POINTS SHOP</strong></h1>
      <p class="card-text">Use your points earned from completing tasks to redeem cool rewards!</p>
    </div>
  </div>

  <div class="row row-cols-1 row-cols-md-3 g-4">

    {{#each items}}
    <div class="col">
      <div class="card h-100">
        <img src="{{this.image}}" class="card-img-top" alt="{{this.name}}">
        <div class="card-body">
          <h5 class="card-title">{{this.name}}</h5>
          <h4><strong>{{this.points}} points</strong></h4>

          <form action="/points-shop/redeem/{{this.id}}" method="POST">
            <button class="btn btn-primary" type="submit">Redeem</button>
          </form>

        </div>
      </div>
    </div>
    {{/each}}

  </div>

</div>
