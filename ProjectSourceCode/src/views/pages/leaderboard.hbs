<div class="leaderboard-page">
	<div class="container-fluid px-4">
		<div class="row justify-content-center">
			<div class="col-lg-10">

				<div class="text-center mb-5 fade-in">
					<h1 class="page-title">Leaderboard</h1>
					<p class="page-subtitle">Congrats to our top performers!!</p>
				</div>

				{{#if (length topThree)}}
					<div class="top-three-section fade-in">
						<div class="row g-4">
							{{#each topThree}}
								<div class="col-md-4">
									<div class="winner-card">
										<div class="winner-rank" style="font-size: 3rem; font-weight: bold; color: #ffc107;">
											{{#if @first}}1st{{else}}{{#if (eq @index 1)}}2nd{{else}}3rd{{/if}}{{/if}}
										</div>
										<div class="winner-name">{{this.display_name}}</div>
										<div class="winner-points">{{this.total_points}} points</div>
									</div>
								</div>
							{{/each}}
						</div>
					</div>
				{{/if}}

				<div class="leaderboard-card fade-in">
					<div class="leaderboard-header">
						<h3>All Members</h3>
					</div>
					<div id="membersList">
						{{#each others}}
							<div class="member-row" data-member-id="{{this.id}}" style="display: flex; align-items: center; gap: 1rem;">
								<div class="member-rank" style="min-width: 50px; font-size: 1.2rem; font-weight: bold; text-align: center;">#{{this.rank}}</div>
								<div class="member-info" style="flex: 1;">
									<div class="member-name">{{this.display_name}}</div>
									<div class="member-points">{{this.total_points}} points</div>
								</div>
							</div>
						{{/each}}
					</div>
				</div>
			</div>
		</div>
	</div>
</div>