<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-lg-5 col-md-7">
      <div class="login-form-card">
        <div class="text-center mb-4">
          <h2 class="login-form-title">Create Account</h2>
          <p class="text-muted">Join Gello and start earning points</p>
        </div>
        <form id="registerForm" action="/auth/register" method="POST">
          <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input
              type="email"
              class="form-control login-input"
              id="email"
              name="email"
              required
            />
          </div>
          <div class="mb-3">
            <label for="display_name" class="form-label">Display Name</label>
            <input
              type="text"
              class="form-control login-input"
              id="display_name"
              name="display_name"
              required
            />
          </div>
          <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input
              type="password"
              class="form-control login-input"
              id="password"
              name="password"
              autocomplete="new-password"
              minlength="8"
              required
            />
          </div>
          <div class="mb-3">
            <label for="passwordConfirm" class="form-label">Confirm Password</label>
            <input
              type="password"
              class="form-control login-input"
              id="passwordConfirm"
              name="passwordConfirm"
              minlength="8"
              required
              autocomplete="new-password"
            />
          </div>
          <input type="hidden" name="role" value="member" />
          <div id="registerError" class="alert alert-danger d-none" role="alert"></div>
          <button type="submit" class="btn btn-signin w-100">Register</button>
        </form>
        <div class="text-center mt-4">
          <p class="mb-0">
            Already have an account?
            <a href="/pages/login" class="register-link">Login</a>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
<script src="/js/register.js"></script>
