<div class="list-column" data-list-id="{{id}}">
	<div class="list-header">
		<h3>{{name}}</h3>
		{{#if (or (eq user.role "admin") (eq user.role "manager"))}}
			<button class="btn btn-sm btn-outline-secondary" data-action="edit-list" data-list-id="{{id}}">
				<i class="fas fa-edit"></i>
			</button>
		{{/if}}
	</div>
	<div class="list-tasks" data-list-id="{{id}}">
		{{#if (length tasks)}}
			{{#each tasks}}
				{{> task-card task=this user=../user}}
			{{/each}}
		{{else}}
			<div class="empty-tasks-message text-center text-muted small py-3">
				<i class="bi bi-inbox me-1"></i>
				No tasks yet
			</div>
		{{/if}}
	</div>
	{{#if (or (eq user.role "admin") (eq user.role "manager"))}}
		<button class="btn btn-primary btn-sm mt-2" data-action="create-task" data-list-id="{{id}}">
			<i class="fas fa-plus"></i> Add Task
		</button>
	{{/if}}
</div>

