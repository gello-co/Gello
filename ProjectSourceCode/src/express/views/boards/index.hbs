<div class="container my-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Boards</h1>
    {{#if (or (eq user.role "admin") (eq user.role "manager"))}}
      <button class="btn btn-primary" onclick="createBoard()">
        <i class="fas fa-plus"></i>
        Create Board
      </button>
    {{/if}}
  </div>
  <div class="row">
    {{#if (length boards)}}
      {{#each boards}}
        <div class="col-md-4 mb-4">
          <div class="card h-100">
            <div class="card-body">
              <h5 class="card-title">{{name}}</h5>
              {{#if description}}
                <p class="card-text text-muted">{{truncate description 80}}</p>
              {{/if}}
              <a href="/boards/{{id}}" class="btn btn-primary">Open Board</a>
            </div>
          </div>
        </div>
      {{/each}}
    {{else}}
      <div class="col-12">
        {{#if (or (eq user.role "admin") (eq user.role "manager"))}}
          {{> empty-state 
              icon="clipboard-list" 
              title="No boards yet" 
              message="Get started by creating your first board to organize tasks." 
              actionUrl="#" 
              actionText="Create Board" 
              actionIcon="plus"
          }}
        {{else}}
          {{> empty-state 
              icon="clipboard-list" 
              title="No boards yet" 
              message="Contact an administrator or manager to create a board."
          }}
        {{/if}}
      </div>
    {{/if}}
  </div>
</div>
