		<!-- NAVBAR -->
        {{> navbar}}

		<!-- HERO SECTION -->
		<div class="hero-section container">
			<h1 class="hero-title floating">Welcome to Gello</h1>
			<p class="hero-subtitle">
				For corporate and office teams who want to boost productivity in a fun
				and creative way while still being organized. Gello is a productivity
				application that promotes productivity and management while making work
				fun and competitive. Unlike Trello, our product allows for in-depth task
				delegation, customization, and tracking.
			</p>
			<div>
				<a href="./Team Member View/member-login.hbs">
					<button class="btn btn-signin">Sign In</button>
				</a>
			</div>
			<div style="margin-top: 20px">
				<a href="./Team Member View/member-register.hbs">
					<span class="register-link">Register here</span>
				</a>
			</div>
		</div>

		<!-- LOGIN OPTIONS SECTION -->
		<div class="login-options">
			<div class="container-fluid px-4">
				<h2 class="text-center">Login Options</h2>
				<div class="row g-4">
					<div class="col-md-6">
						<a
							href="./Admin View/admin-login.hbs"
							style="text-decoration: none; color: inherit"
						>
							<div class="login-card">
								<img
									src="../../images/adminlogin.jpg"
									alt="Admin Dashboard"
								/>
								<div class="login-card-body">
									<h3>Login as Admin</h3>
									<p>Can adjust roles, and assign tasks</p>
								</div>
							</div>
						</a>
					</div>
					<div class="col-md-6">
						<a
							href="./Team Member View/member-login.hbs"
							style="text-decoration: none; color: inherit"
						>
							<div class="login-card">
								<img
									src="../../images/memberlogin.jpg"
									alt="Team Member Dashboard"
								/>
								<div class="login-card-body">
									<h3>Login as Team Member</h3>
									<p>Log in to see your assigned tasks and earn points.</p>
								</div>
							</div>
						</a>
					</div>
				</div>
			</div>
		</div>

		<!-- FOOTER -->
		{{> footer}}

