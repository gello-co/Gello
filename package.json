{
  "name": "team-1-gello",
  "private": true,
  "version": "0.2.0-dev",
  "type": "module",
  "scripts": {
    "start": "bash scripts/bootstrap.sh",
    "start:fresh": "RESET_DB=true bash scripts/bootstrap.sh",
    "restart": "pkill -f 'bun --hot' && bash scripts/bootstrap.sh",
    "dev": "doppler run --config dev -- bun --hot ProjectSourceCode/src/index.ts",
    "dev:mock": "MOCK_MODE=true MOCK_AUTO_LOGIN=true bun --hot ProjectSourceCode/src/index.ts",
    "dev:watch": "doppler run --config dev -- bun --hot --watch ProjectSourceCode/src/index.ts",
    "start:prd": "doppler run --config prd --no-interactive -- bun ProjectSourceCode/src/index.ts",
    "start:stg": "doppler run --config stg --no-interactive -- bun ProjectSourceCode/src/index.ts",
    "db:start": "bunx supabase start",
    "db:stop": "bunx supabase stop",
    "db:status": "bunx supabase status",
    "db:reset": "bunx supabase db reset",
    "db:seed": "bun run scripts/seed-simple.ts",
    "db:types": "bunx supabase gen types typescript --local > ProjectSourceCode/src/types/database.types.ts",
    "test": "vitest run",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:watch": "vitest",
    "test:ci": "vitest run --bail 1",
    "test:coverage": "vitest run --coverage",
    "test:server": "doppler run --config dev -- env NODE_ENV=test ALLOW_TEST_BYPASS=true bun ProjectSourceCode/src/index.ts",
    "build": "bun run build:css && bun run build:server",
    "build:css": "postcss ProjectSourceCode/src/public/css/input.css -o ProjectSourceCode/src/public/css/output.css",
    "build:server": "bun build ProjectSourceCode/src/index.ts --outdir=dist --target=node --sourcemap",
    "lint": "bunx biome lint --write",
    "format": "bunx biome format --write",
    "check": "bunx biome check --write",
    "check:dry": "bunx biome check",
    "typecheck": "bunx tsc --noEmit",
    "validate": "bun run typecheck && bun run check:dry && bun run test:ci",
    "precommit": "bun run format && bun run lint && bun run typecheck",
    "e2e": "playwright test",
    "e2e:ui": "playwright test --ui",
    "e2e:debug": "playwright test --debug",
    "doppler:dev": "doppler run --config dev --",
    "doppler:stg": "doppler run --config stg --",
    "doppler:prd": "doppler run --config prd --"
  },
  "dependencies": {
    "@supabase/ssr": "0.8.0",
    "@supabase/supabase-js": "2.86.0",
    "alpinejs": "3.15.2",
    "bcryptjs": "3.0.3",
    "bootstrap": "5.3.8",
    "bootstrap-icons": "1.13.1",
    "cookie-parser": "1.4.7",
    "csrf-csrf": "4.0.3",
    "dotenv": "17.2.3",
    "express": "5.2.1",
    "express-handlebars": "8.0.4",
    "express-rate-limit": "8.2.1",
    "helmet": "8.1.0",
    "htmx.org": "2.0.8",
    "pino": "10.1.0",
    "pino-http": "11.0.0",
    "supabase": "2.65.2",
    "zod": "4.1.13"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "@happy-dom/global-registrator": "20.0.11",
    "@playwright/test": "1.57.0",
    "@trunkio/launcher": "1.3.4",
    "@types/bun": "1.3.3",
    "@types/cookie-parser": "1.4.10",
    "@types/express": "5.0.6",
    "@types/node": "24.10.1",
    "@types/pg": "8.15.6",
    "@types/supertest": "6.0.3",
    "autoprefixer": "10.4.22",
    "git-format-staged": "3.1.1",
    "husky": "9.1.7",
    "pg": "8.16.3",
    "pino-pretty": "13.1.3",
    "playwright": "1.57.0",
    "postcss": "8.5.6",
    "postcss-cli": "11.0.1",
    "supertest": "7.1.4",
    "tdd-guard-vitest": "0.1.6",
    "tsx": "4.21.0",
    "typescript": "5.9.3",
    "vitest": "4.0.15"
  },
  "release": {
    "note": "Release automation is temporarily disabled."
  }
}
