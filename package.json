{
  "name": "team-1-gello",
  "private": true,
  "version": "0.1.0-rc.1",
  "type": "module",
  "scripts": {
    "dev:env": "bash docs/dev/.devOps/scripts/sync.sh || echo 'Failed to sync'",
    "dev": "doppler run -- bun --hot ProjectSourceCode/src/index.ts",
    "build": "bun run build:css && bun run build:server",
    "build:css": "postcss ProjectSourceCode/src/public/css/input.css -o ProjectSourceCode/src/public/css/output.css",
    "build:server": "bun build ProjectSourceCode/src/index.ts --outdir=dist --target=node --sourcemap",
    "start": "bash scripts/start-dev.sh",
    "start:prd": "NODE_ENV=production bun ProjectSourceCode/src/index.ts",
    "restart": "bash scripts/restart-dev.sh",
    "restart:quick": "bash scripts/restart-dev-quick.sh",
    "test:login": "bash scripts/test-login.sh",
    "test:server": "NODE_ENV=test bun ProjectSourceCode/src/index.ts",
    "test": "vitest",
    "test:ci": "vitest --run",
    "test:integration": "vitest tests/integration",
    "test:unit": "vitest tests/unit",
    "db:start": "bunx supabase start",
    "db:stop": "bunx supabase stop",
    "db:status": "bunx supabase status",
    "db:reset": "bunx supabase db reset",
    "db:env": "bunx supabase status -o env",
    "supabase:start": "bunx supabase start",
    "supabase:stop": "bunx supabase stop",
    "supabase:status": "bunx supabase status",
    "supabase:reset": "bunx supabase db reset",
    "supabase:env": "bunx supabase status -o env",
    "test:local": "bun run supabase:start && bun run test:integration -- --run && bun run supabase:stop",
    "test:local:watch": "bun run test:integration",
    "setup": "bash .devcontainer/post-create.sh",
    "verify": "bun run check && bun run test:ci",
    "reset-env": "bunx supabase db reset && bun run supabase:env",
    "lint": "bunx biome lint --write",
    "lint:dry": "bunx biome lint",
    "format": "bunx biome format --write",
    "format:dry": "bunx biome format",
    "check": "bunx biome check --write",
    "check:dry": "bunx biome check",
    "validate": "bun run format && bun run lint && bun run check:dry",
    "validate:all": "bun run validate && bun run test:ci",
    "e2e": "playwright test",
    "e2e:visual": "UPDATE_SNAPSHOTS=1 playwright test",
    "e2e:ui": "playwright test --ui",
    "e2e:debug": "playwright test --debug",
    "visual:update": "UPDATE_SNAPSHOTS=1 bun run e2e",
    "workflow:validate": "yamllint --no-warnings .github/workflows/*.yml 2>&1 || echo 'yamllint not installed or found errors (install with: pip install yamllint)'",
    "workflow:test:ci": "./bin/act pull_request -W .github/workflows/ci.yml --list",
    "workflow:test:preview": "./bin/act pull_request -W .github/workflows/preview.yml --list",
    "workflow:test:dependabot": "./bin/act pull_request_target -W .github/workflows/dependabot-automation.yml -a dependabot[bot] --list",
    "workflow:test:all": "bun run workflow:validate && ./bin/act --list",
    "workflow:run:ci": "./bin/act pull_request -W .github/workflows/ci.yml",
    "workflow:run:preview": "./bin/act pull_request -W .github/workflows/preview.yml",
    "workflow:run:dependabot": "./bin/act pull_request_target -W .github/workflows/dependabot-automation.yml -a dependabot[bot]",
    "workflow:run:lint": "./bin/act pull_request -W .github/workflows/ci.yml -j lint",
    "seed": "bun run scripts/seed-db.ts",
    "docs:validate": "bun run docs/dev/.devOps/scripts/docs-validate.ts"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.81.1",
    "alpinejs": "^3.15.1",
    "bootstrap": "^5.3.8",
    "commander": "^14.0.2",
    "cookie-parser": "^1.4.7",
    "csrf-csrf": "^4.0.3",
    "express": "^5.1.0",
    "express-handlebars": "^8.0.3",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "htmx.org": "^2.0.8",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.2",
    "playwright": "^1.56.1",
    "tailwindcss": "^4.1.17",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.5",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@commitlint/prompt-cli": "^20.1.0",
    "@playwright/test": "^1.56.1",
    "@types/bun": "^1.3.2",
    "@types/cookie-parser": "^1.4.10",
    "@types/express": "^5.0.5",
    "@types/node": "^24.10.0",
    "@types/supertest": "^6.0.3",
    "@vitest/ui": "^4.0.9",
    "autoprefixer": "^10.4.22",
    "husky": "^9.1.7",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "supabase": "^2.58.5",
    "supertest": "^7.1.4",
    "typescript": "^5.9.3",
    "vitest": "^4.0.8"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release": {
    "note": "Release automation is temporarily disabled."
  }
}
