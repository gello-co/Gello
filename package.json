{
  "name": "team-1-gello",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "dev:env": "bash docs/dev/.devOps/scripts/sync.sh || echo 'Failed to sync'",
    "dev": "bun --hot ProjectSourceCode/src/index.ts",
    "build": "bun run build:css && bun run build:server",
    "build:css": "cd ProjectSourceCode && bun run build:css",
    "build:server": "bun build ProjectSourceCode/src/index.ts --outdir=ProjectSourceCode/dist --target=node --sourcemap",
    "start": "NODE_ENV=development bun ProjectSourceCode/src/index.ts",
    "start:prd": "NODE_ENV=production bun ProjectSourceCode/src/index.ts",
    "test": "vitest --config ProjectSourceCode/vitest.config.ts",
    "test:ci": "vitest --run --config ProjectSourceCode/vitest.config.ts",
    "lint": "cd ProjectSourceCode && bunx biome lint --write",
    "lint:dry": "cd ProjectSourceCode && bunx biome lint",
    "format": "cd ProjectSourceCode && bunx biome format --write",
    "format:dry": "cd ProjectSourceCode && bunx biome format",
    "check": "cd ProjectSourceCode && bunx biome check --write",
    "check:dry": "cd ProjectSourceCode && bunx biome check",
    "validate": "bun run format && bun run lint && bun run check:dry",
    "validate:all": "bun run validate && bun run test:ci",
    "e2e": "playwright test",
    "seed": "bun run scripts/seed-db.ts",
    "docs:validate": "bun run scripts/docs-validate.ts"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.81.0",
    "alpinejs": "^3.15.1",
    "bootstrap": "^5.3.8",
    "express": "^5.1.0",
    "express-handlebars": "^8.0.3",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "htmx.org": "^2.0.8",
    "tailwindcss": "^4.1.17",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "playwright": "^1.56.1",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@commitlint/prompt-cli": "^20.1.0",
    "@playwright/test": "^1.56.1",
    "@types/bun": "^1.3.2",
    "@types/express": "^5.0.5",
    "@types/node": "^24.10.0",
    "@types/supertest": "^6.0.3",
    "autoprefixer": "^10.4.22",
    "husky": "^9.1.7",
    "postcss": "^8.5.6",
    "supabase": "^2.58.5",
    "supertest": "^7.1.4",
    "typescript": "^5.9.3",
    "vitest": "^4.0.8"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release": {
    "note": "Release automation is temporarily disabled."
  }
}
