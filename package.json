{
  "name": "team-1-gello",
  "private": true,
  "version": "0.2.0-dev",
  "type": "module",
  "scripts": {
    "start": "bash scripts/bootstrap.sh",
    "start:fresh": "RESET_DB=true bash scripts/bootstrap.sh",
    "restart": "pkill -f 'bun --hot' && bash scripts/bootstrap.sh",
    "start:prd": "doppler run --config prd --no-interactive -- bun ProjectSourceCode/src/index.ts",
    "start:stg": "doppler run --config stg --no-interactive -- bun ProjectSourceCode/src/index.ts",
    "db:start": "bunx supabase start",
    "db:stop": "bunx supabase stop",
    "db:status": "bunx supabase status",
    "db:reset": "bunx supabase db reset",
    "db:seed": "bun run scripts/seed-simple.ts",
    "test": "bun test",
    "test:unit": "bun test tests/unit",
    "test:integration": "bun test tests/integration",
    "test:watch": "bun test --watch",
    "test:ci": "bun test --bail",
    "build": "bun run build:css && bun run build:server",
    "build:css": "postcss ProjectSourceCode/src/public/css/input.css -o ProjectSourceCode/src/public/css/output.css",
    "build:server": "bun build ProjectSourceCode/src/index.ts --outdir=dist --target=node --sourcemap",
    "lint": "bunx biome lint --write",
    "format": "bunx biome format --write",
    "check": "bunx biome check --write",
    "check:dry": "bunx biome check",
    "validate": "bun run format && bun run lint && bun run check:dry && bun run test:ci",
    "e2e": "playwright test",
    "e2e:ui": "playwright test --ui",
    "e2e:debug": "playwright test --debug"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.84.0",
    "alpinejs": "^3.15.2",
    "bcryptjs": "^3.0.3",
    "bootstrap": "^5.3.8",
    "cookie-parser": "^1.4.7",
    "csrf-csrf": "^4.0.3",
    "express": "^5.1.0",
    "express-handlebars": "^8.0.4",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "htmx.org": "^2.0.8",
    "pino": "^10.1.0",
    "pino-http": "^10.5.0",
    "zod": "^4.1.12",
    "bootstrap-icons": "^1.13.1"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.6",
    "@happy-dom/global-registrator": "^20.0.10",
    "@playwright/test": "^1.56.1",
    "@types/bun": "^1.3.3",
    "@types/cookie-parser": "^1.4.10",
    "@types/express": "^5.0.5",
    "@types/node": "^24.10.1",
    "@types/pg": "^8.15.6",
    "@types/supertest": "^6.0.3",
    "autoprefixer": "^10.4.22",
    "git-format-staged": "^3.1.1",
    "husky": "^9.1.7",
    "pg": "^8.16.3",
    "pino-pretty": "^13.1.2",
    "playwright": "^1.56.1",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "supertest": "^7.1.4",
    "typescript": "^5.9.3",
    "drizzle-orm": "^0.31.4",
    "drizzle-kit": "^0.20.18"
  },
  "release": {
    "note": "Release automation is temporarily disabled."
  }
}
