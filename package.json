{
  "name": "team-1-gello",
  "private": true,
  "version": "0.1.0abu",
  "type": "module",
  "scripts": {
    "start": "bash scripts/bootstrap.sh",
    "start:fresh": "RESET_DB=true bash scripts/bootstrap.sh",
    "dev": "bash scripts/bootstrap.sh",
    "build": "bun run build:css && bun run build:server",
    "build:css": "postcss ProjectSourceCode/src/public/css/input.css -o ProjectSourceCode/src/public/css/output.css",
    "build:server": "bun build ProjectSourceCode/src/index.ts --outdir=dist --target=node --sourcemap",
    "start:prd": "NODE_ENV=production bun ProjectSourceCode/src/index.ts",
    "restart": "pkill -f 'bun --hot' && bun run dev",
    "test:server": "NODE_ENV=test bun ProjectSourceCode/src/index.ts",
    "test": "bun test",
    "test:ci": "bun test --bail",
    "test:unit": "bun test tests/unit",
    "test:unit:watch": "bun test tests/unit --watch",
    "test:integration": "bun test tests/integration",
    "test:integration:parallel": "bun test tests/integration",
    "test:e2e": "playwright test || echo 'E2E tests skipped (optional for MVP)'",
    "test:all": "bun run test:unit && bun run test:integration",
    "test:all:with-e2e": "bun run test:all && bun run test:e2e",
    "test:watch": "bun test --watch",
    "db:start": "bunx supabase start",
    "db:stop": "bunx supabase stop",
    "db:status": "bunx supabase status",
    "db:reset": "bunx supabase db reset",
    "db:env": "bunx supabase status -o env",
    "supabase:start": "bunx supabase start",
    "supabase:stop": "bunx supabase stop",
    "supabase:status": "bunx supabase status",
    "supabase:reset": "bunx supabase db reset",
    "supabase:env": "bunx supabase status -o env",
    "test:local": "bun run supabase:start && bun test tests/integration && bun run supabase:stop",
    "test:local:watch": "bun run test:integration",
    "setup": "bash .devcontainer/post-create.sh",
    "verify": "bun run check && bun run test:ci",
    "reset-env": "bunx supabase db reset && bun run supabase:env",
    "seed": "bun run scripts/seed-simple.ts",
    "lint": "bunx biome lint --write",
    "lint:dry": "bunx biome lint",
    "format": "bunx biome format --write",
    "format:dry": "bunx biome format",
    "check": "bunx biome check --write",
    "check:dry": "bunx biome check",
    "validate": "bun run format && bun run lint && bun run check:dry",
    "validate:all": "bun run validate && bun run test:ci",
    "e2e": "playwright test",
    "e2e:visual": "UPDATE_SNAPSHOTS=1 playwright test",
    "e2e:ui": "playwright test --ui",
    "e2e:debug": "playwright test --debug",
    "docs:validate": "bun run docs/dev/.devOps/scripts/docs-validate.ts"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.81.1",
    "alpinejs": "^3.15.2",
    "bcryptjs": "^3.0.3",
    "bootstrap": "^5.3.8",
    "commander": "^14.0.2",
    "cookie-parser": "^1.4.7",
    "csrf-csrf": "^4.0.3",
    "express": "^5.1.0",
    "express-handlebars": "^8.0.3",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "htmx.org": "^2.0.8",
    "pino": "^10.1.0",
    "tailwindcss": "^4.1.17",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.5",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@commitlint/prompt-cli": "^20.1.0",
    "@happy-dom/global-registrator": "^20.0.10",
    "@playwright/test": "^1.56.1",
    "@tailwindcss/postcss": "^4.1.17",
    "@types/bun": "^1.3.2",
    "@types/cookie-parser": "^1.4.10",
    "@types/express": "^5.0.5",
    "@types/node": "^24.10.1",
    "@types/pg": "^8.15.6",
    "@types/supertest": "^6.0.3",
    "autoprefixer": "^10.4.22",
    "husky": "^9.1.7",
    "pg": "^8.16.3",
    "pino-pretty": "^13.1.2",
    "playwright": "^1.56.1",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "supertest": "^7.1.4",
    "tailwindcss": "^4.1.17",
    "typescript": "^5.9.3",
    "zod": "^4.1.12"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release": {
    "note": "Release automation is temporarily disabled."
  }
}
