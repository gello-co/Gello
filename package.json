{
  "name": "team-1-gello",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "dev:env": "bash .devOps/scripts/sync.sh || echo 'Failed to sync'",
    "dev": "bun --hot ProjectSourceCode/src/index.ts",
    "build": "bun run build:css && bun run build:server",
    "build:css": "cd ProjectSourceCode && bun run build:css",
    "build:server": "bun build ProjectSourceCode/src/index.ts --outdir=ProjectSourceCode/dist --target=node --sourcemap",
    "start": "NODE_ENV=development bun ProjectSourceCode/src/index.ts",
    "start:prd": "NODE_ENV=production bun ProjectSourceCode/src/index.ts",
    "test": "vitest --config ProjectSourceCode/vitest.config.ts",
    "test:ci": "vitest --run --config ProjectSourceCode/vitest.config.ts",
    "lint": "bunx biome lint --write",
    "lint:dry": "bunx biome lint",
    "format": "bunx biome format --write",
    "format:dry": "bunx biome format",
    "check": "bunx biome check --write",
    "check:dry": "bunx biome check",
    "validate": "bun run format && bun run lint && bun run check:dry",
    "validate:all": "bun run validate && bun run test:ci",
    "e2e": "playwright test",
    "release:preview": "bun scripts/preview-release.mjs",
    "release:preview:dev": "bun scripts/preview-release.mjs --branch dev",
    "release:preview:main": "bun scripts/preview-release.mjs --branch main",
    "release:dry:dev": "DEBUG=semantic-release:* bunx semantic-release --no-ci --dry-run --branches dev",
    "release:dry:main": "DEBUG=semantic-release:* bunx semantic-release --no-ci --dry-run --branches main",
    "workflow:validate": "yamllint --no-warnings .github/workflows/*.yml 2>&1 || echo 'yamllint not installed or found errors (install with: pip install yamllint)'",
    "workflow:test:ci": "./bin/act pull_request -W .github/workflows/ci.yml --list",
    "workflow:test:release": "./bin/act workflow_dispatch -W .github/workflows/release.yml --list",
    "workflow:test:preview": "./bin/act pull_request -W .github/workflows/preview.yml --list",
    "workflow:test:dependabot": "./bin/act pull_request_target -W .github/workflows/dependabot-automation.yml -a dependabot[bot] --list",
    "workflow:test:all": "bun run workflow:validate && ./bin/act --list",
    "workflow:run:ci": "./bin/act pull_request -W .github/workflows/ci.yml",
    "workflow:run:release": "./bin/act workflow_dispatch -W .github/workflows/release.yml",
    "workflow:run:preview": "./bin/act pull_request -W .github/workflows/preview.yml",
    "workflow:run:dependabot": "./bin/act pull_request_target -W .github/workflows/dependabot-automation.yml -a dependabot[bot]",
    "workflow:run:lint": "./bin/act pull_request -W .github/workflows/ci.yml -j lint"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.80.0",
    "alpinejs": "^3.15.1",
    "bootstrap": "^5.3.8",
    "express": "^5.1.0",
    "express-handlebars": "^8.0.3",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "htmx.org": "^2.0.8",
    "playwright": "^1.56.1",
    "tailwindcss": "^4.1.16",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.4",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@commitlint/prompt-cli": "^20.1.0",
    "@jno21/semantic-release-github-commit": "^1.0.0",
    "@playwright/test": "^1.56.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/exec": "^7.1.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^12.0.1",
    "@semantic-release/release-notes-generator": "^14.1.0",
    "@types/bun": "^1.3.1",
    "@types/express": "^5.0.5",
    "@types/node": "^24.10.0",
    "@types/supertest": "^6.0.3",
    "autoprefixer": "^10.4.21",
    "husky": "^9.1.7",
    "postcss": "^8.5.6",
    "semantic-release": "^25.0.1",
    "supabase": "^2.54.11",
    "supertest": "^7.1.4",
    "typescript": "^5.9.3",
    "vitest": "^4.0.7"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release": {
    "branches": [
      "main",
      {
        "name": "dev",
        "prerelease": "dev"
      }
    ],
    "repositoryUrl": "https://github.com/gello-co/Gello.git",
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "CHANGELOG.md"
        }
      ],
      [
        "@semantic-release/exec",
        {
          "prepareCmd": "bun scripts/dedupe-changelog.mjs"
        }
      ],
      [
        "@semantic-release/git",
        {
          "assets": [
            "CHANGELOG.md"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ],
      [
        "@semantic-release/github",
        {
          "assets": [
            {
              "path": "CHANGELOG.md",
              "label": "Changelog"
            }
          ]
        }
      ]
    ]
  }
}
